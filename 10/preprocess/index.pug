  div#site
    // Header >>>>>>>>>>>>>>>>>>>>>>>>>>>> 
    header.header
      //
      .header-top
        .logo
          a(href=""): img(src="./img/svg/logo-ico.svg")

        ul.menu
          li: a(href="") О компании
          li: a(href="") Портфолио
          li: a(href="") Каталог
          li: a(href="") Сервис
