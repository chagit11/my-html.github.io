        a.header-btn(href="") ПЕРЕЙТИ

      
    
    
    // Main >>>>>>>>>>>>>>>>>>>>>>>>>>>>>> 
    main.main
      //- M I X I N S ----------->
      //-
      mixin main-title(text)
        h2.main-title 
          span <br>
          span
          =text
      //-
      mixin pag-btn(parent)
        div(class=parent+"__pag-btn")
          img(src="./img/svg/pag-left.svg")
          img(src="./img/svg/pag-right.svg")

